<Window x:Class="KUMF5H_HFT_2021221.WpfClient.StatMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KUMF5H_HFT_2021221.WpfClient"
        xmlns:vm="clr-namespace:KUMF5H_HFT_2021221.WpfClient.VM"
        mc:Ignorable="d"
        Title="StatMenuWindow" Height="450" Width="800" Background="#F0F0F0">

    <Window.DataContext>
        <vm:StatMenuWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <vm:ResultsTemplateSelector x:Key="ResultsTemplateSelector" />

        <DataTemplate x:Key="AverageResultTemplate">
            <StackPanel>
                <TextBlock Text="{Binding ProducerName}" FontSize="14" Foreground="DarkSlateGray"/>
                <TextBlock Text="{Binding AveragePrice}" FontSize="14" Foreground="DarkSlateGray"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LocationResultsTemplate">
            <StackPanel>
                <TextBlock Text="{Binding ProducersName}" FontSize="14" Foreground="DarkSlateGray"/>
                <TextBlock Text="{Binding MedicineName}" FontSize="14" Foreground="DarkSlateGray"/>
                <TextBlock Text="{Binding Location}" FontSize="14" Foreground="DarkSlateGray"/>
            </StackPanel>
        </DataTemplate>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ItemsControl">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" 
              ItemsSource="{Binding CollectionNames}"
              SelectedItem="{Binding SelectedCollection}" 
              SelectionChanged="ComboBox_SelectionChanged"/>

        <ItemsControl Grid.Row="1" 
                      ItemsSource="{Binding SelectedCollection}" 
                      ItemTemplateSelector="{StaticResource ResultsTemplateSelector}">
        </ItemsControl>
    </Grid>
</Window>
